<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islami" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/bright_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="bottom_navigation_style" parent="Theme.Islami">
        <item name="backgroundTint">@color/dark_blue</item>
    </style>
    <style name="sura_content_style" parent="Theme.Islami">
        <item name="android:textColor">@color/bright_yellow</item>
    </style>
    <style name="toolbar_title_style" parent="Theme.Islami">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="border_style" parent="Theme.Islami">
        <item name="android:background">@color/bright_yellow</item>
    </style>

</resources>